{
  "name": "koa-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "unit": "jest --config=jest-unit.conf.js --detectOpenHandles",
    "unit:watch": "jest --config=jest-unit.conf.js --watch",
    "integration": "jest --config=jest-integration.conf.js",
    "integration:watch": "jest --config=jest-integration.conf.js --watch",
    "format": "prettier --config .prettierrc.yaml --write '{src,integration-test,test}/**/*.{ts,tsx,js,jsx,html}'",
    "start": "node --inspect=5858 -r ts-node/register ./src/app.ts",
    "start:watch": "nodemon"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "koa": "^2.8.1",
    "koa-joi-router": "^6.0.0",
    "koa-router": "^7.4.0",
    "pg": "^7.12.1"
  },
  "devDependencies": {
    "@types/hapi__joi": "^15.0.4",
    "@types/koa-joi-router": "^5.2.2",
    "@types/koa-router": "^7.0.42",
    "@types/pg": "^7.11.1",
    "@types/jest": "^24.0.18",
    "@types/koa": "^2.0.49",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "testcontainers": "^2.0.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
